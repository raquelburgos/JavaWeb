<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>DatabaseURL</param-name>
        <param-value>jdbc:mysql://localhost:3306/midb</param-value>
    </context-param>
    <context-param>
        <param-name>UserDB</param-name>
        <param-value>admin</param-value>
    </context-param>
    <context-param>
        <param-name>PasswordDB</param-name>
        <param-value>pass</param-value>
    </context-param>
    <servlet>
        <servlet-name>MiPrimerServlet</servlet-name>
        <servlet-class>com.seas.MiPrimerServlet</servlet-class>
        <init-param>
            <param-name>Name</param-name>
            <param-value>Value</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ResumenServlet</servlet-name>
        <servlet-class>com.seas.ResumenServlet</servlet-class>
        <init-param>
            <param-name>Proveedor</param-name>
            <param-value>Proveedor</param-value>
        </init-param>
        <init-param>
            <param-name>Contacto</param-name>
            <param-value>rburgosplaza@gmail.com</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>EjemploServlet</servlet-name>
        <servlet-class>com.seas.SessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EncuestaServlet</servlet-name>
        <servlet-class>com.seas.EncuestaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MiPrimerServlet</servlet-name>
        <url-pattern>/MiPrimerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResumenServlet</servlet-name>
        <url-pattern>/ResumenServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EjemploServlet</servlet-name>
        <url-pattern>/EjemploServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EncuestaServlet</servlet-name>
        <url-pattern>/EncuestaServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
